CREATE DATABASE movies_db;

use movies_db;

CREATE TABLE user (
    id INT AUTO_INCREMENT PRIMARY KEY,
    username VARCHAR(255),
    password VARCHAR(255)
);

INSERT INTO user (username, password) VALUES ("max", "supermax");

CREATE TABLE movies (
    id INT AUTO_INCREMENT PRIMARY KEY,
    title VARCHAR(255),
    duration INT,
    language VARCHAR(50),
    director VARCHAR(255),
    actors VARCHAR(255),
    min_age INT,
    startDate VARCHAR(255),
    endDate VARCHAR(255),
    daysMWF BOOLEAN,
    daysTTS BOOLEAN,
    daysTFS BOOLEAN,
    startTime VARCHAR(255),
    adresse_cinema VARCHAR(255),
    id_owner int,
    FOREIGN KEY (id_owner) REFERENCES user(id)
);
-- Appliquer les normal form !

